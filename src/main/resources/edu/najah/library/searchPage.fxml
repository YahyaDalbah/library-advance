<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="504.0" prefWidth="797.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.najah.library.SearchPageController">

     <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="797.0" style="-fx-padding: 10;">
        <!-- Title aligned to the top-left -->
        <Label text="LIBRARY7">
            <font>
                <Font name="DejaVu Serif Condensed Bold" size="30.0" />
            </font>
        </Label>

        <!-- Spacer to push the icon to the right -->
        <Region HBox.hgrow="ALWAYS" />

         <Button style="-fx-background-color: transparent; -fx-border: none;">
            <graphic>
                <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true" >
                    <Image url="@../../../images/user.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>


    <VBox alignment="CENTER" layoutX="-1.0" layoutY="63.0" prefHeight="437.0" prefWidth="797.0" spacing="20" style="-fx-background-color: white;">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>


        <VBox alignment="CENTER" prefHeight="176.0" prefWidth="757.0" spacing="20">
            <!-- Search Bar Section -->
            <HBox alignment="CENTER" spacing="0">
                <!-- Search Bar -->
                <TextField fx:id="searchField" prefHeight="44.0" prefWidth="579.0" promptText="Look for books" style="-fx-border-color: black; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-font-size: 18px; -fx-background-color: white;" />

                 <Button fx:id="searchButton" contentDisplay="RIGHT" prefHeight="43.0" prefWidth="55.0" style="-fx-border-color: black; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-background-color: white;">
                    <!-- Search Icon -->
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="22.0" preserveRatio="true" >
                            <Image url="@../../../images/search.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <!-- Search By Section -->
            <HBox alignment="CENTER" prefHeight="12.0" prefWidth="573.0" spacing="10">
                <Label prefHeight="23.0" prefWidth="63.0" style="-fx-font-size: 14px;" text="Search by" />
                <Button prefHeight="14.0" prefWidth="59.0" style="-fx-font-size: 15px; -fx-text-fill: black; -fx-border-color: black; -fx-border-width: 1px; -fx-border-radius: 20px; -fx-background-color: white;" text="Any" />
                <Button prefHeight="29.0" prefWidth="60.0" style="-fx-font-size: 15px; -fx-text-fill: black; -fx-border-color: black; -fx-border-width: 1px; -fx-border-radius: 20px; -fx-background-color: white;" text="Title" />
                <Button prefHeight="26.0" prefWidth="73.0" style="-fx-font-size: 15px; -fx-text-fill: black; -fx-border-color: black; -fx-border-width: 1px; -fx-border-radius: 20px; -fx-background-color: white;" text="Author" />
                <ComboBox fx:id="yearComboBox" prefHeight="33.0" prefWidth="85.0" promptText="Year" style="-fx-font-size: 15px; -fx-text-fill: black; -fx-border-color: black; -fx-border-width: 1px; -fx-border-radius: 20px; -fx-background-color: white;" />
                <ComboBox fx:id="typeComboBox" prefHeight="29.0" prefWidth="89.0" promptText="Type" style="-fx-font-size: 15px; -fx-text-fill: black; -fx-border-color: black; -fx-border-width: 1px; -fx-border-radius: 20px; -fx-background-color: white;" />
            </HBox>
        </VBox>

        <!-- Searched Books Area -->
        <VBox fx:id="searchedBooksArea" alignment="CENTER" spacing="20" style="-fx-padding: 3;">
            <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="132.0" prefWidth="483.0" spacing="10" style="-fx-border-color: black; -fx-border-width: 1; -fx-border-radius: 10; -fx-padding: 10; -fx-background-color: #F5F5F5;">
                <!-- Book Image -->
                <ImageView fitHeight="79.0" fitWidth="59.0" preserveRatio="true" style="-fx-image: 20;">
                </ImageView>

                <!-- Book Details -->
                <VBox prefHeight="112.0" prefWidth="310.0" spacing="5">
                    <!-- Title -->
                    <Text style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Orlando: A Biography" />

                    <!-- Author and Card Number (On the Same Line) -->
                    <HBox alignment="CENTER" spacing="80">
                        <Text style="-fx-font-size: 14px;" text="Virginia Woolf" />
                        <Text style="-fx-font-size: 14px;" text="Card number: 12B1711" />
                    </HBox>

                    <!-- Publication Date and Genre (On the Same Line) -->
                    <HBox alignment="TOP_LEFT" spacing="60">
                        <Text style="-fx-font-size: 14px;" text="October 11, 1928" />
                        <Text style="-fx-font-size: 14px;" text="Novel" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
