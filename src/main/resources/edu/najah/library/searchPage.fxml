<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.najah.library.controllers.SearchPageController">

    <!-- Top Header Section -->
    <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="1024.0" style="-fx-padding: 10; -fx-background-color: white;" AnchorPane.topAnchor="0.0">
        <Label style="-fx-padding: 0 0 0 20;" text="LIBRARY7">
            <font>
                <Font name="DejaVu Serif Condensed Bold" size="30.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <!-- User Icon Button positioned in the top-right corner -->
        <Button style="-fx-background-color: white; -fx-border: none;" onMouseClicked="#navigateToLogin" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10">
            <graphic>
                <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true">
                    <Image url="@../../../images/user.png" />
                </ImageView>
            </graphic>
        </Button>
    </HBox>


    <!-- Centered Content -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="80.0">
        <!-- Search Bar Section -->
        <HBox alignment="CENTER" spacing="0">
            <TextField fx:id="searchField" prefHeight="44.0" prefWidth="500.0" promptText="Search for books..." style="-fx-border-color: #007BFF;  -fx-border-width: 1px; -fx-border-radius: 5px; -fx-font-size: 18px;  -fx-background-color: #f9f9f9;" />
            <Button fx:id="searchButton" contentDisplay="RIGHT" prefHeight="43.0" prefWidth="55.0" style="-fx-border-color: #007BFF; -fx-border-width: 2px; -fx-border-radius: 30px; -fx-background-color: #007BFF;" onAction="#handleSearch">
                <graphic>
                    <ImageView fitHeight="25.0" fitWidth="22.0" preserveRatio="true">
                        <Image url="@../../../images/search.png" />
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <!-- Search By Section -->
        <HBox alignment="CENTER" spacing="12" style="-fx-padding: 20 0;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Search by" />
            <Button fx:id="anyButton" text="Any" style="  -fx-font-size: 14px; -fx-background-color: white;" />
            <Button fx:id="titleButton" text="Title" style=" -fx-font-size: 14px; -fx-background-color: white;" />
            <Button fx:id="authorButton" text="Author" style="-fx-font-size: 14px; -fx-background-color: white;" />
            <ComboBox fx:id="typeComboBox" promptText="Type" style="-fx-background-color: #f4f4f4; -fx-border-color: #007BFF; -fx-border-radius: 25px;" />
        </HBox>

        <!-- Error Label Section -->
        <Label fx:id="errorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 14px; -fx-padding: 0 0 20 0;" />

        <!-- Searched Books Area -->
        <VBox fx:id="searchResultsVBox" alignment="CENTER" maxWidth="800.0" prefWidth="800.0" spacing="15" style="-fx-padding: 10 20 20 20;">
            <!-- Dynamic content will be populated here by the controller -->
        </VBox>

    </VBox>

    <!-- Back Button -->
    <Button fx:id="backButton"
            onAction="#handleBackButtonAction"
            prefHeight="40.0"
            prefWidth="100.0"
            style="-fx-border-radius: 30px; -fx-background-radius: 30px; -fx-background-color: #007BFF; -fx-border-color: #007BFF; -fx-font-size: 16px; -fx-text-fill: black;"
            AnchorPane.bottomAnchor="20.0"
            AnchorPane.leftAnchor="20.0">
        <graphic>
            <ImageView fitHeight="25.0" fitWidth="25.0" preserveRatio="true">
                <Image url="@../../../images/back.png" />
            </ImageView>
        </graphic>
        <text>Back</text>
    </Button>

</AnchorPane>
