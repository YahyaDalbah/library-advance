<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.najah.library.controllers.UserTableController">

    <!-- Top Header Section with Title aligned to the left -->
    <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-padding: 10; -fx-background-color: white; -fx-spacing: 10;">
        <Label style="-fx-background-color: white;" text="LIBRARY7">
            <font>
                <Font name="DejaVu Serif Condensed Bold" size="30.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- User Icon Button positioned in the top-right corner -->
    <Button style="-fx-background-color: white;" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10">
        <graphic>
            <ImageView fitHeight="25.0" fitWidth="25.0" preserveRatio="true">
                <Image url="@../../../images/back.png" />
            </ImageView>
        </graphic>
    </Button>

    <!-- VBox for the User Table below the header -->
    <VBox AnchorPane.topAnchor="70" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" style="-fx-padding: 10; -fx-spacing: 10;">
        <TableView fx:id="userTable" layoutX="14.0" layoutY="50.0" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="100" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="200" />
                <TableColumn fx:id="emailColumn" text="Email" prefWidth="200" />
                <TableColumn fx:id="actionColumn" text="Action" prefWidth="100" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
