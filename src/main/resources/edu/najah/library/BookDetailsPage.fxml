<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.najah.library.BookDetailsPageController">
    <!-- Top Header Section with Title on the left and Icon on the right -->
    <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="797.0" style="-fx-padding: 10; -fx-background-color: white;">
         <Label style="-fx-background-color: white;" text="LIBRARY7">
            <font>
                <Font name="DejaVu Serif Condensed Bold" size="30.0" />
            </font>
        </Label>

         <Region style="-fx-background-color: white;" HBox.hgrow="ALWAYS" />

         <Button style="-fx-background-color: white; -fx-border: none;">
            <graphic>
                <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true">
                    <Image url="@../../../images/user.png" />
                </ImageView>
            </graphic>
        </Button>
    </HBox>
     <HBox alignment="CENTER" layoutX="-7.0" layoutY="61.0" prefHeight="539.0" prefWidth="807.0" spacing="30" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0);">

        <!-- Left Panel (Book Image) -->
        <VBox alignment="CENTER" prefWidth="300.0" spacing="20">
            <ImageView fx:id="bookImage" fitHeight="500.0" fitWidth="300.0" preserveRatio="true" style="-fx-border-radius: 10; -fx-background-color: #e0e0e0;" />
        </VBox>

        <!-- Right Panel (Book Details) -->
        <VBox alignment="TOP_LEFT" prefWidth="400.0" spacing="15">
            <!-- Book Title -->
            <Text fx:id="bookTitle" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Book Title" />

            <!-- Description Section -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Description:" />
            <Text fx:id="bookDescription" style="-fx-font-size: 16px; -fx-text-fill: #555555;" text="This is a placeholder description." wrappingWidth="350.0" />

            <!-- Author -->
            <Text fx:id="bookAuthor" style="-fx-font-size: 18px; -fx-text-fill: #555555;" text="Author: Author Name" />

            <!-- Genre -->
            <Text fx:id="bookGenre" style="-fx-font-size: 18px; -fx-text-fill: #555555;" text="Genre: Fiction" />

            <!-- Year -->
            <Text fx:id="bookYear" style="-fx-font-size: 18px; -fx-text-fill: #555555;" text="Year: 2024" />


            <!-- Price -->
            <Text fx:id="bookPrice" style="-fx-font-size: 18px; -fx-text-fill: #555555;" text="Price: $19.99" />

            <!-- Availability -->
            <Text fx:id="bookAvailability" style="-fx-font-size: 18px; -fx-text-fill: #555555;" text="Available: Yes" />
        </VBox>
    </HBox>
</AnchorPane>
